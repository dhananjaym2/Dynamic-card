<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayoutHC5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/backgroundImageViewHC5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/imageContentDescription"
        android:background="@drawable/card_background_rounded_corners" />

    <ImageView
        android:id="@+id/leftImageInHC5"
        android:layout_width="@dimen/leftImageWidthHC5"
        android:layout_height="@dimen/leftImageHeightHC5"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/horizontalMarginOfContentFromCard"
        android:contentDescription="@string/imageContentDescription"
        tools:src="@drawable/ic_outline_image_24" />

    <LinearLayout
        android:id="@+id/childTextContainerHC5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/marginFromImageToTextForSmallCard"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/horizontalMarginOfContentFromCard"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/leftImageInHC5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTextHC5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_brown"
            android:textSize="@dimen/titleTextSizeHC1"
            android:textStyle="bold"
            tools:text="titleTextHC5" />

        <TextView
            android:id="@+id/descriptionTextHC5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacingTitleAndDescriptionHC5"
            android:textColor="@color/medium_brown"
            android:textSize="@dimen/descriptionTextSizeHC5"
            tools:text="descriptionTextHC5" />

        <View
            android:id="@+id/coloredRectangleHC5"
            android:layout_width="@dimen/coloredRectangleWidthHC5"
            android:layout_height="4dp"
            android:layout_marginTop="@dimen/spacingBetweenColoredRectangleAndDescriptionHC5"
            android:background="@color/coloredRectangleHC5" />
    </LinearLayout>
</RelativeLayout>